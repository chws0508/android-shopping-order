<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cartProduct"
            type="woowacourse.shopping.presentation.model.CartProductInfoModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:strokeWidth="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_order_product_name"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:text="@{cartProduct.productModel.name}"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="[든든] 동원 스위트콘" />


                <ImageView
                    app:imageUrl="@{cartProduct.productModel.imageUrl}"
                    app:error="@{@drawable/default_image}"
                    android:id="@+id/image_order_product_poster"
                    android:layout_width="136dp"
                    android:layout_height="72dp"
                    app:layout_constraintTop_toBottomOf="@id/text_order_product_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="13dp"
                    tools:src="@drawable/default_image" />

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/text_order_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="13dp"
                    tools:text="3개"
                    app:layout_constraintBottom_toTopOf="@+id/text_order_product_price" />

                <TextView
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:id="@+id/text_order_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="13dp"
                    tools:text="99000원"
                    app:layout_constraintBottom_toBottomOf="@+id/image_order_product_poster" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
