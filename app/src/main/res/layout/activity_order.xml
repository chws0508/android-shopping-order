<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.myorder.MyOrderActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_order"
            layout="@layout/toolbar_order" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_order"
            app:layout_constraintBottom_toTopOf="@+id/container_point"
            android:id="@+id/order_scrollview">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/recycler_order"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:listitem="@layout/item_order"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_point"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/container_order">


            <TextView
                android:id="@+id/text_order_total_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                tools:text="사용 가능한 포인트: 15000"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edit_text_order_usage_point_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="사용할 포인트 : "
                app:layout_constraintStart_toStartOf="@+id/text_order_total_point"
                app:layout_constraintTop_toTopOf="@+id/edit_text_order_usage_point"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:textStyle="bold"
                android:inputType="number"
                android:id="@+id/edit_text_order_usage_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/text_order_total_point"
                app:layout_constraintStart_toEndOf="@+id/edit_text_order_usage_point_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_order"
            android:background="@color/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:layout_width="122dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:layout_height="match_parent"
                android:text="@string/order_button_description"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/secondary_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/button_order_payment" />

            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/order_original_price_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_order_original_price_description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="7,500원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_order_original_price"
                app:layout_constraintEnd_toStartOf="@id/button_order_payment"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/order_final_price_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_order_final_price_description"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_order_original_price_description"
                app:layout_constraintStart_toStartOf="@+id/text_order_original_price_description" />

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="5,000원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_order_final_price"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_order_original_price"
                app:layout_constraintEnd_toStartOf="@+id/button_order_payment" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
