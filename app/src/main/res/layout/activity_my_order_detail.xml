<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.myorder.MyOrderActivity">

    <data>
        <variable
            name="orderDetailModel"
            type="woowacourse.shopping.presentation.model.OrderDetailModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_order"
            layout="@layout/toolbar_order" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_order"
            app:layout_constraintBottom_toTopOf="@+id/container_point"
            android:id="@+id/order_scrollview">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_my_order_detail"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:listitem="@layout/item_order"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_point"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/container_order">


            <TextView
                android:id="@+id/text_my_order_detail_usage_point_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="사용한 포인트 : "
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/text_my_order_detail_usage_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@{String.valueOf(orderDetailModel.spendPoint)}"
                tools:text="10000"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                app:layout_constraintStart_toEndOf="@id/text_my_order_detail_usage_point_description"
                app:layout_constraintBottom_toBottomOf="@id/text_my_order_detail_usage_point_description"
                app:layout_constraintTop_toTopOf="@id/text_my_order_detail_usage_point_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_order"
            android:background="@color/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/order_original_price_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_my_order_detail_original_price_description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_goneMarginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                tools:text="7,500원"
                android:text="@{@string/price_format(orderDetailModel.totalPrice)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_my_order_detail_original_price"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/order_final_price_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_my_order_detail_final_price_description"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_my_order_detail_original_price_description"
                app:layout_constraintStart_toStartOf="@+id/text_my_order_detail_original_price_description" />

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginEnd="12dp"
                tools:text="5,000원"
                android:text="@{@string/price_format(orderDetailModel.spendPrice)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_my_order_detail_final_price"
                app:layout_constraintTop_toBottomOf="@+id/text_my_order_detail_original_price"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
